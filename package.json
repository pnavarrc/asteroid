{
  "name": "asteroid",
  "version": "1.0.0",
  "description": "Proof of concept - ESLint plugin generation",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "release:patch": "release patch",
    "release:minor": "release minor",
    "release:major": "release major",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pnavarrc/asteroid.git"
  },
  "keywords": [
    "eslint",
    "proof-of-concept",
    "eslint-plugin"
  ],
  "author": "Pablo Navarro Castillo <pnavarrc@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pnavarrc/asteroid/issues"
  },
  "homepage": "https://github.com/pnavarrc/asteroid#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "eslint": "^6.1.0",
    "eslint-plugin-jest": "^22.15.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "release": "^6.0.1"
  },
  "dependencies": {
    "@babel/parser": "^7.5.5",
    "@babel/traverse": "^7.5.5",
    "@babel/types": "^7.5.5",
    "lodash": "^4.17.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
